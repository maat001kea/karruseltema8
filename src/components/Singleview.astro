---
const { title, date, imageSrc, description } = Astro.props;
---

<div class="artist_card">
  <!-- Venstre side: billede -->
  <div class="artist_image">
    <img src={imageSrc} alt={title} />
  </div>

  <!-- HÃ¸jre side: tekst og knapper -->
  <div class="artist_container">
    <h2>{title}</h2>
    <h3>{date}</h3>
    <p>{description}</p>

    <div class="buy_ticket_button">
      <button class="buy_ticket_button">Buy Ticket</button>
    </div>
  </div>
</div>

<style>
  /* Style for hoved containeren */
  .artist_card {
    display: flex;
    color: white;
    padding: 20px;
    max-width: 1000px;
    margin: 20px auto;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  }

  /* Style for billedet */
  .artist_image img {
    width: 100%;
    max-width: 400px;
  }

  /* Style for tekstcontaineren */
  .artist_container {
    flex: 2;
    padding-left: 20px;
  }

  /* Style for knappen */
  .buy_ticket_button {
    display: flex;
    justify-content: flex-end;
    margin-top: 20px;
  }

  .buy_ticket_button button {
    background-color: #f0ff00;
    color: #000;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .buy_ticket_button button:hover {
    background-color: #d8e200;
  }
</style>
