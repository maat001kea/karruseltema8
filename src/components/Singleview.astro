---
const { title, date, imageSrc, description } = Astro.props;
---

<div class="artist_card">
  <div class="artist_image">
    <img src={imageSrc} alt={title} />
  </div>

  <div class="artist_container">
    <h3>{title}</h3>
    <p>{description}</p>

    <div class="play_container">
      <button class="control-button1">
        <img src="public/icon/arrow-left-circle.svg" alt="Previous" />
      </button>
      <button class="control-button2">
        <img src="public/icon/play.svg" alt="Play" />
      </button>
      <button class="control-button3">
        <img src="public/icon/arrow-right-circle.svg" alt="Next" />
      </button>
    </div>
    <div class="icon-container">
      <img src="/public/icon/heart.svg" alt="Favorite" />
      <img src="/public/icon/music.svg" alt="Music" />
    </div>
  </div>
</div>

<style>
  .play_container {
    display: flex;
    justify-content: space-evenly;
    padding: 8px;
    border: 3px solid #9ad328;
    background-color: #6f5f8a;
    border-radius: 10px;
    max-width: 300px;
    margin-top: 1%;
  }
  .control-button1,
  .control-button2,
  .control-button3 {
    background: none;
    border: none;
    cursor: pointer;
  }

  .control-button1 img,
  .control-button2 img,
  .control-button3 img {
    width: 30px;
    height: auto;
  }
  .artist_card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    color: white;
    padding: 20px;
    max-width: 1000px;
  }

  .artist_image img {
    width: 100%;
    max-width: 400px;
  }

  .artist_container {
    display: grid;
    grid-template-columns: 1fr;
    width: 400%;
  }

  .icon-container {
    display: flex;
    justify-content: flex-start;
    gap: 10px;
    margin-top: 20px;
  }

  .icon-container img {
    width: 25px;
    height: auto;
    cursor: pointer;
  }
</style>
